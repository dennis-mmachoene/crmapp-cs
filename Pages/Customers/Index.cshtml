@page
@model crmapp.Pages.Customers.index
@{
    ViewData["Title"] = "index";
}

<h2 class="text-center mb-3">List of Customers</h2>

<a href="/Customers/Create" class="btn btn-primary mb-3">New Customer</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.CustomersList)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@(customer.Firstname + " " + customer.Lastname)</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Company</td>
                <td>@customer.CreatedAt</td>
                <td style="white-space:nowrap">
                    <a href="/Customers/Edit?id=@customer.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Customers/Delete?id=@customer.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>